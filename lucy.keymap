#include <dt-bindings/zmk/bt.h>

#define COLEMAK             0
#define SYMBOLS             1
#define FN_NUM_ACCS         2
#define NAVIGATION          3
#define MEDIA_CTRL          4
#define SPECIAL             5

#define QWERTY              6

&mt {
  // flavor = "tap-preferred";
